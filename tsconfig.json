{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "types": ["@rbxts/types", "@rbxts/reflect"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src",
    "paths": {
      "shared/*": ["shared/*"],
      "client/*": ["client/*"],
      "server/*": ["server/*"]
    }
  },
  "include": ["src"]
}
