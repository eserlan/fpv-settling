{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "moduleDetection": "force",
    "noLib": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "typeRoots": [
      "node_modules/@rbxts",
      "node_modules/@flamework"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src",
    "paths": {
      "shared/*": [
        "shared/*"
      ],
      "client/*": [
        "client/*"
      ],
      "server/*": [
        "server/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}